<div class="container">

<div class="row">
  <div class="col-md-4">
   <div class="card" style="width: 18rem;">
  <div class="card-body">
    <p class="card-title">Gegevens gebruiker </p>
    <p class="card-subtitle mb-2 text-muted"><%= @user.username %></p>
    <p class="card-text"> <%= @user.name %></p>
    <%  if user_signed_in? %>
<% if current_user.following?(@user) %>
    <p class="card-text"><%= link_to "niet meer volgen", unfollow_user_path(@user.username), method: :delete %> </p>
<% else %>

    <p class="card-text"><%= link_to "Volgen", follow_user_path(@user.username), method: :post %> </p>
<% end %>
<% end %>

  </div>
</div>

  </div>

  <div class="col-md-8">
<ul class="list-group">
    <% @tweets.each do |tweet| %>
              <%= link_to tweet, class: "list-group-item list-group-item-action" do %>
        <h5 class="list-group-item-heading"><%= tweet.user.username %></h5>
        <p class="list-group-item-text"><%= tweet.content %></p> <% end %>
      
      <% end %>
</ul>
</div>
</div>
</div>
